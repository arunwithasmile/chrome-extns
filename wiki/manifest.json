{
    "name": "Wiki UI",
    "description": "Extension to beautify UI layouts in Wikipedia",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.wikipedia.org/*"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "Make Wiki Minimal",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.wikipedia.org/*"
    ]
}